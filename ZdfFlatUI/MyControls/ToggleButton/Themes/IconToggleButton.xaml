    <Style TargetType="{x:Type ZUI:IconToggleButton}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="UncheckedIcon" Value="{StaticResource UncheckedIcon}" />
        <Setter Property="CheckedIcon" Value="{StaticResource CheckedIcon}" />
        <Setter Property="Content" Value="选择" />
        <Setter Property="CheckedContent" Value="完成" />
        <Setter Property="UncheckedIconSize" Value="14" />
        <Setter Property="CheckedIconSize" Value="14" />
        <Setter Property="CheckedForeground" Value="Blue" />
        <Setter Property="ContentMargin" Value="5,0,0,0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ZUI:IconToggleButton}">
                    <StackPanel Orientation="{TemplateBinding Orientation}" Background="Transparent">
                        <Path x:Name="icon" Data="{TemplateBinding UncheckedIcon}" Stretch="Uniform" 
                              Width="{TemplateBinding UncheckedIconSize}" Fill="{TemplateBinding Foreground}" />
                        <ContentPresenter x:Name="content" Content="{TemplateBinding Content}" 
                                          Margin="{TemplateBinding ContentMargin}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="icon" Property="Data" Value="{Binding CheckedIcon, RelativeSource={RelativeSource AncestorType=ZUI:IconToggleButton}}" />
                            <Setter TargetName="content" Property="Content" Value="{Binding CheckedContent, RelativeSource={RelativeSource AncestorType=ZUI:IconToggleButton}}" />
                            <Setter TargetName="icon" Property="Width" Value="{Binding CheckedIconSize, RelativeSource={RelativeSource AncestorType=ZUI:IconToggleButton}}" />
                            <Setter TargetName="icon" Property="Fill" Value="{Binding CheckedForeground, RelativeSource={RelativeSource AncestorType=ZUI:IconToggleButton}}" />
                            <Setter TargetName="content" Property="TextElement.Foreground" Value="{Binding CheckedForeground, RelativeSource={RelativeSource AncestorType=ZUI:IconToggleButton}}" />
                            <Setter TargetName="content" Property="TextElement.FontSize" Value="{Binding CheckedIconSize, RelativeSource={RelativeSource AncestorType=ZUI:IconToggleButton}}" />
                        </Trigger>
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter Property="ContentMargin" Value="0,5,0,0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
