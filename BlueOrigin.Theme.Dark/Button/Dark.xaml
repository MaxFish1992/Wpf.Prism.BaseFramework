    <!--下划线按钮-->
    <Style x:Key="underLineIconButton" TargetType="{x:Type contols:IconButton}">
        <Setter Property="ImageSize" Value="16"></Setter>
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="Width" Value="110"></Setter>
        <Setter Property="Height" Value="30"></Setter>
        <Setter Property="Margin" Value="1,0,0,0"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type contols:IconButton}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Border Name="bg" BorderThickness="0" Background="#FF2A3143">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Image Name="img" Source="{TemplateBinding NormalImage}" Height="{TemplateBinding ImageSize}"/>
                                <Grid Name="spereator" Width="4" Background="Transparent"></Grid>
                                <TextBlock Name="txt" Text="{TemplateBinding Content}" 
                                   FontFamily="{TemplateBinding FontFamily}" 
                                   FontSize="{StaticResource advancedFontSize}" 
                                   FontStretch="{TemplateBinding FontStretch}" 
                                   FontStyle="{TemplateBinding FontStyle}" 
                                   FontWeight="{ TemplateBinding FontWeight}" 
                                   Foreground="{TemplateBinding Foreground}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="0,0,0,2"></TextBlock>
                            </StackPanel>
                        </Border>
                        <Border x:Name="PART_UnderLine" Grid.Row="1" Height="3" Background="{TemplateBinding Background}"></Border>
                        <Grid Grid.RowSpan="2" x:Name="PART_Disabled" Visibility="Collapsed" Background="Black" Opacity="0.4"></Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="NormalImage" Value="{x:Null}">
                            <!--<Setter TargetName="marginLeft" Property="Width" Value="8" />-->
                            <Setter TargetName="spereator" Property="Width" Value="0" />
                            <!--<Setter TargetName="marginRight" Property="Width" Value="8" />-->
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="img" Property="Source" Value="{Binding HoverImage, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                            <Setter TargetName="txt" Property="Foreground" Value="{Binding Background, ElementName=PART_UnderLine}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bg" Property="Background" Value="Black" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_Disabled" Property="Visibility" Value="Visible"></Setter>
                            <!--<Setter TargetName="img" Property="Source" Value="{Binding DisabledImage, RelativeSource={RelativeSource Mode=TemplatedParent}}" />-->
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--文字置底按钮-->
    <Style x:Key="BottomTextIconButton" TargetType="{x:Type contols:IconButton}">
        <Setter Property="ImageSize" Value="16"></Setter>
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="Width" Value="50"></Setter>
        <Setter Property="Height" Value="100"></Setter>
        <Setter Property="Margin" Value="1,0,0,0"></Setter>
        <Setter Property="Cursor" Value="Hand"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type contols:IconButton}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Border Name="bg" BorderThickness="0" Background="Transparent">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                <Image Name="img" Source="{TemplateBinding NormalImage}" Height="{TemplateBinding ImageSize}"/>
                                <Grid Name="spereator" Width="4" Background="Transparent"></Grid>
                                <TextBlock Name="txt" Text="{TemplateBinding Content}" 
                                   FontFamily="{TemplateBinding FontFamily}" 
                                   FontSize="12" 
                                   FontStretch="{TemplateBinding FontStretch}" 
                                   FontStyle="{TemplateBinding FontStyle}" 
                                   FontWeight="{ TemplateBinding FontWeight}" 
                                   Foreground="{TemplateBinding Foreground}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="0,5,0,2"></TextBlock>
                            </StackPanel>
                        </Border>
                        <Border x:Name="PART_UnderLine" Grid.Row="1" Height="3" BorderThickness="0" Background="{TemplateBinding Background}"></Border>
                        <Grid Grid.RowSpan="2" x:Name="PART_Disabled" Visibility="Collapsed" Background="Black" Opacity="0.4"></Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="NormalImage" Value="{x:Null}">
                            <!--<Setter TargetName="marginLeft" Property="Width" Value="8" />-->
                            <Setter TargetName="spereator" Property="Width" Value="0" />
                            <!--<Setter TargetName="marginRight" Property="Width" Value="8" />-->
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="img" Property="Source" Value="{Binding HoverImage, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                            <Setter TargetName="txt" Property="Foreground" Value="#1296db"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bg" Property="Background" Value="Transparent" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_Disabled" Property="Visibility" Value="Visible"></Setter>
                            <!--<Setter TargetName="img" Property="Source" Value="{Binding DisabledImage, RelativeSource={RelativeSource Mode=TemplatedParent}}" />-->
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--文字选中按钮-->
    <Style x:Key="textCheckButton" TargetType="{x:Type ToggleButton}">
        <Setter Property="Background" Value="#444444"></Setter>
        <Setter Property="Height" Value="{StaticResource inputControlHeight}"></Setter>
        <Setter Property="BorderThickness" Value="0"></Setter>
        <Setter Property="BorderBrush" Value="Blue"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Grid>
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">
                            <TextBlock Name="PART_Txt" Margin="5,0" Text="{Binding Content, RelativeSource={RelativeSource Mode=TemplatedParent}}" Foreground="{TemplateBinding Foreground}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                        <Border x:Name="PART_Disabled" Background="Black" Opacity="0.4" Visibility="Collapsed"></Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" Value="Blue"></Setter>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderThickness" Value="1"></Setter>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_Disabled" Property="Visibility" Value="Visible"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--频谱切换开关-->
    <Style x:Key="SpectrumSwitch" TargetType="{x:Type ToggleButton}">
        <Setter Property="Background" Value="#FF111111"></Setter>
        <Setter Property="Width" Value="100"></Setter>
        <Setter Property="Height" Value="20"></Setter>
        <Setter Property="BorderBrush" Value="#979797"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="{StaticResource spectrumBarFontColor}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <!--<Setter Property="Padding" Value="1"/>-->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Border Grid.ColumnSpan="2" x:Name="PART_Border" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="3" SnapsToDevicePixels="True">
                        </Border>
                        <Border Grid.Column="0" x:Name="PART_Switch_Left" Background="#FF2D2D2D" SnapsToDevicePixels="True" CornerRadius="3,0,0,3">
                            <TextBlock Text="时频图" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        </Border>
                        <Border Grid.Column="1" x:Name="PART_Switch_Right" Background="{TemplateBinding Background}" SnapsToDevicePixels="True" CornerRadius="0,3,3,0">
                            <TextBlock Text="频谱图" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!--<Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="PART_Switch_Left" Property="Background" Value="White"/>
                            <Setter TargetName="PART_Switch_Right" Property="Background" Value="White"/>
                        </Trigger>-->
                        <Trigger Property="IsChecked" Value="true">
                            <Setter TargetName="PART_Switch_Left" Property="Background" Value="#FF111111"/>
                            <Setter TargetName="PART_Switch_Right" Property="Background" Value="#FF2D2D2D"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="BorderBrush" Value="#666666"></Setter>
                            <Setter TargetName="PART_Switch_Left" Property="Background" Value="#666666"/>
                            <Setter TargetName="PART_Switch_Right" Property="Background" Value="#666666"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--检测列表统计状态按钮-->
    <Style x:Key="statusCheckButton" TargetType="{x:Type ToggleButton}">
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Height" Value="16"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="Cursor" Value="Hand"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Grid Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                        <Border x:Name="PART_Disabled" Background="Black" Opacity="0.4" Visibility="Collapsed"></Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" Value="#004F7A"></Setter>
                        </Trigger>
                        <!--<Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF666666"/>
                        </Trigger>-->
                        <!--<Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#FF000000"/>
                        </Trigger>-->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_Disabled" Property="Visibility" Value="Visible"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--开关按钮-->
    <Style x:Key="switch" TargetType="{x:Type contols:HighlightedSwitch}">
        <Setter Property="Background" Value="Black"></Setter>
        <Setter Property="Width" Value="40"></Setter>
        <Setter Property="Height" Value="14"></Setter>
        <Setter Property="BorderBrush" Value="#979797"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <!--<Setter Property="Padding" Value="1"/>-->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type contols:HighlightedSwitch}">
                    <Grid>
                        <Border x:Name="PART_Border" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="3" SnapsToDevicePixels="True">
                        </Border>
                        <Border x:Name="PART_Switch_Left" Width="20" Height="14" HorizontalAlignment="Left" Background="#999999" SnapsToDevicePixels="True" CornerRadius="3,0,0,3"></Border>
                        <Border x:Name="PART_Switch_Right" Visibility="Collapsed" Width="20" Height="14" HorizontalAlignment="Right" Background="#D8D8D8" SnapsToDevicePixels="True" CornerRadius="0,3,3,0"></Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="PART_Switch_Left" Property="Background" Value="White"/>
                            <Setter TargetName="PART_Switch_Right" Property="Background" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="true">
                            <Setter TargetName="PART_Switch_Left" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="PART_Switch_Right" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter Property="BorderBrush" Value="#666666"></Setter>
                            <Setter TargetName="PART_Switch_Left" Property="Background" Value="#666666"/>
                            <Setter TargetName="PART_Switch_Right" Property="Background" Value="#666666"/>
                        </Trigger>
                        <Trigger Property="IsHighlighted" Value="true">
                            <Setter TargetName="PART_Switch_Left" Property="Background" Value="#0CD562"/>
                            <Setter TargetName="PART_Switch_Right" Property="Background" Value="#0CD562"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>