    <!--cross按钮-->
    <Style x:Key="crossButton" TargetType="{x:Type Button}">
        <Setter Property="Height" Value="22"/>
        <Setter Property="Width" Value="22"/>
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="SnapsToDevicePixels" Value="True"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="Chrome" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                        <Path x:Name="Arrow" Stroke="#FFD8D8D8" HorizontalAlignment="Center" VerticalAlignment="Center" 
                              StrokeEndLineCap="Square" StrokeStartLineCap="Square" StrokeThickness="1.5" Stretch="Uniform">
                            <Path.Data>
                                <PathGeometry>
                                    <PathGeometry.Figures>
                                        <PathFigure StartPoint="0,0">
                                            <LineSegment Point="25,25"></LineSegment>
                                        </PathFigure>
                                        <PathFigure StartPoint="25,0">
                                            <LineSegment Point="0,25"></LineSegment>
                                        </PathFigure>
                                    </PathGeometry.Figures>
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Arrow" Property="Stroke" Value="#FF4AA9EE"></Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Arrow" Property="Stroke" Value="#FF4AA9EE"></Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Stroke" TargetName="Arrow" Value="#FFAFAFAF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--合计按钮-->
    <Style x:Key="totalButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Height" Value="16"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"></ContentPresenter>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF666666"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#FF000000"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#FFA7A7A7"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <!--颜色带图标控制按钮-->
    <Style x:Key="colorIconButton" TargetType="{x:Type contols:IconButton}" BasedOn="{StaticResource channelButton}">
        <Setter Property="ImageSize" Value="16"></Setter>
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type contols:IconButton}">
                    <Border Name="bg" BorderThickness="0" CornerRadius="3" Background="{TemplateBinding Background}">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <Grid Name="marginLeft" Width="10" Background="Transparent"></Grid>
                                <Image Name="img" Source="{TemplateBinding NormalImage}" Height="{TemplateBinding ImageSize}"/>
                                <Grid Name="spereator" Width="8" Background="Transparent"></Grid>
                                <TextBlock Name="txt" Text="{TemplateBinding Content}" 
                                   FontFamily="{TemplateBinding FontFamily}" 
                                   FontSize="{StaticResource advancedFontSize}" 
                                   FontStretch="{TemplateBinding FontStretch}" 
                                   FontStyle="{TemplateBinding FontStyle}" 
                                   FontWeight="{ TemplateBinding FontWeight}" 
                                   Foreground="{TemplateBinding Foreground}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="0,0,0,2"></TextBlock>
                                <Grid Name="marginRight" Width="10" Background="Transparent"></Grid>
                            </StackPanel>
                            <Grid x:Name="PART_Hover" Visibility="Collapsed" Background="White" Opacity="0.2"></Grid>
                            <Grid x:Name="PART_Disabled" Visibility="Collapsed" Background="Black" Opacity="0.4"></Grid>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="NormalImage" Value="{x:Null}">
                            <Setter TargetName="marginLeft" Property="Width" Value="8" />
                            <Setter TargetName="spereator" Property="Width" Value="0" />
                            <Setter TargetName="marginRight" Property="Width" Value="8" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Hover" Property="Visibility" Value="Visible"></Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_Disabled" Property="Visibility" Value="Visible"></Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="img" Property="Source" Value="{Binding DisabledImage, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                            <!--<Setter Property="Background" Value="#FF999999" />-->
                            <Setter TargetName="PART_Disabled" Property="Visibility" Value="Visible"></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

